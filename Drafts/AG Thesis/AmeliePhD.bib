issn = {14756765},
journal = {European Journal of Political Research},
keywords = {attitudes to immigrants,experiment,political climate,stereotype dis/confirmation,terrorist attacks},
pages = {1--26},
title = {{Terrorist attacks and Europeans' attitudes towards immigrants: An experimental approach}},
