file = {:C$\backslash$:/Users/u0096872/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Fielding, Goldstein - 2006 - Cross-classified and multiple membership structures in multilevel models- An introduction and review.pdf:pdf},
isbn = {RR791},
issn = {01621459},
journal = {University of Birmingham Research Reports},
pages = {1--69},
title = {{Cross-classified and multiple membership structures in multilevel models- An introduction and review}},
year = {2006}
}
