file = {:C$\backslash$:/Users/u0096872/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Sides, Citrin - 2007 - European opinion about immigration The role of identities, interests and information.pdf:pdf},
isbn = {0007-1234},
